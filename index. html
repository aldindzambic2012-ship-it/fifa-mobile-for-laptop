<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FC Mobile‚ÄìStyle Bosnia Football</title>
  <style>
    body { margin:0; background:#0a3d62; display:flex; justify-content:center; align-items:center; height:100vh; font-family:Arial,sans-serif; }
    canvas { background: linear-gradient(#1fa85b, #117a43); border-radius: 24px; box-shadow: 0 30px 60px rgba(0,0,0,0.6); }
    .ui { position:absolute; top:10px; width:100%; text-align:center; color:white; pointer-events:none; }
    .mobile-controls { position:absolute; bottom:20px; width:100%; display:flex; justify-content:space-around; }
    .btn { background: rgba(255,255,255,0.2); border:none; border-radius:50%; width:60px; height:60px; font-size:24px; color:white; }
  </style>
</head>
<body>
  <div class="ui">
    <h1>üáßüá¶ FC Mobile‚ÄìStyle Game</h1>
    <p>Keyboard: WASD = Move | SPACE = Shoot</p>
  </div>
  <canvas id="game" width="900" height="520"></canvas>
  <div class="mobile-controls">
    <button class="btn" id="left">‚Üê</button>
    <button class="btn" id="up">‚Üë</button>
    <button class="btn" id="down">‚Üì</button>
    <button class="btn" id="right">‚Üí</button>
    <button class="btn" id="shoot">‚öΩ</button>
  </div>

  <script>
    const canvas = document.getElementById('game');
    const ctx = canvas.getContext('2d');

    let keys = {};
    let score = 0;
    let time = 90; // 90 sec match

    const player = { x: 450, y: 420, r: 18, speed: 4 };
    const ball = { x: 450, y: 390, r: 8, vx: 0, vy: 0 };
    const keeper = { x: 450, y: 85, w: 70, h: 14, dir: 1 };

    document.addEventListener('keydown', e => keys[e.code] = true);
    document.addEventListener('keyup', e => keys[e.code] = false);

    // Mobile buttons
    document.getElementById('left').addEventListener('mousedown',()=>keys['KeyA']=true);
    document.getElementById('left').addEventListener('mouseup',()=>keys['KeyA']=false);
    document.getElementById('right').addEventListener('mousedown',()=>keys['KeyD']=true);
    document.getElementById('right').addEventListener('mouseup',()=>keys['KeyD']=false);
    document.getElementById('up').addEventListener('mousedown',()=>keys['KeyW']=true);
    document.getElementById('up').addEventListener('mouseup',()=>keys['KeyW']=false);
    document.getElementById('down').addEventListener('mousedown',()=>keys['KeyS']=true);
    document.getElementById('down').addEventListener('mouseup',()=>keys['KeyS']=false);
    document.getElementById('shoot').addEventListener('mousedown',()=>keys['Space']=true);

    function update(){
      if(keys['KeyA']) player.x -= player.speed;
      if(keys['KeyD']) player.x += player.speed;
      if(keys['KeyW']) player.y -= player.speed;
      if(keys['KeyS']) player.y += player.speed;

      player.x = Math.max(30, Math.min(canvas.width-30, player.x));
      player.y = Math.max(80, Math.min(canvas.height-30, player.y));

      if(Math.abs(ball.x-player.x)<22 && Math.abs(ball.y-player.y)<22){
        ball.x=player.x; ball.y=player.y-18;
      }

      if(keys['Space']) { ball.vy=-9; keys['Space']=false; }
      ball.y += ball.vy; ball.vy*=0.98;

      // Keeper AI
      keeper.x += keeper.dir*3.5;
      if(keeper.x<350||keeper.x>550) keeper.dir*=-1;

      if(ball.y<keeper.y+keeper.h && ball.x>keeper.x-keeper.w/2 && ball.x<keeper.x+keeper.w/2){
        ball.vy=4; // save
      }

      // Goal
      if(ball.y<60 && ball.x>330 && ball.x<570){
        score++; resetBall();
      }
      if(ball.y>canvas.height) resetBall();

      // Timer countdown
      if(frameCount%60===0 && time>0) time--;
    }

    function resetBall(){ ball.x=player.x; ball.y=player.y-20; ball.vy=0; }

    function draw(){
      ctx.clearRect(0,0,canvas.width,canvas.height);
      ctx.strokeStyle='white'; ctx.lineWidth=2;
      ctx.strokeRect(50,50,800,420); ctx.strokeRect(330,50,240,40);

      ctx.fillStyle='#ff3b3b'; ctx.fillRect(keeper.x-keeper.w/2,keeper.y,keeper.w,keeper.h);
      ctx.fillStyle='#0b4ea2'; ctx.beginPath(); ctx.arc(player.x,player.y,player.r,0,Math.PI*2); ctx.fill();
      ctx.fillStyle='#f7d046'; ctx.beginPath(); ctx.arc(player.x+6,player.y-6,4,0,Math.PI*2); ctx.fill();
      ctx.fillStyle='white'; ctx.beginPath(); ctx.arc(ball.x,ball.y,ball.r,0,Math.PI*2); ctx.fill();

      ctx.fillStyle='white'; ctx.font='22px Arial'; ctx.fillText('Goals: '+score,20,30);
      ctx.fillText('Time: '+time+'s',800,30);

      if(time<=0){
        ctx.fillStyle='rgba(0,0,0,0.6)'; ctx.fillRect(0,0,canvas.width,canvas.height);
        ctx.fillStyle='white'; ctx.font='40px Arial'; ctx.fillText('Game Over!',canvas.width/2-100,canvas.height/2);
        ctx.fillText('Score: '+score,canvas.width/2-70,canvas.height/2+50);
        cancelAnimationFrame(loopId);
      }
    }

    let frameCount=0; let loopId;
    function loop(){ frameCount++; update(); draw(); loopId=requestAnimationFrame(loop); }
    loop();
  </script>
</body>
</html>
